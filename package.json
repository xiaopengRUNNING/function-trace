{
  "name": "function-map",
  "displayName": "function map",
  "description": "Conveniently manage a vast number of functions in files to enhance development efficiency.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "function-map.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "function-map.foldCode",
        "title": "Fold All Code",
        "icon": {
          "light": "media/light/allFold.svg",
          "dark": "media/dark/allFold.svg"
        }
      },
      {
        "command": "function-map.unfoldCode",
        "title": "Unfold All Code",
        "icon": {
          "light": "media/light/allUnfold.svg",
          "dark": "media/dark/allUnfold.svg"
        }
      },
      {
        "command": "function-map.foldSpecificRange",
        "title": "Fold Specific Range",
        "icon": "$(fold)"
      },
      {
        "command": "function-map.unfoldSpecificRange",
        "title": "Unfold Specific Range",
        "icon": "$(unfold)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "functionMap",
          "title": "Function-Map",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "functionMap": [
        {
          "id": "functionMapView",
          "name": "List"
        },
        {
          "type": "webview",
          "id": "functionMapPreview",
          "name": "Preview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "function-map.unfoldCode",
          "when": "view === functionMapView && functionMapView.isAllFolded == true",
          "group": "navigation"
        },
        {
          "command": "function-map.foldCode",
          "when": "view === functionMapView && functionMapView.isAllFolded == false",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "function-map.foldSpecificRange",
          "when": "view === functionMapView && viewItem == unfoldedItem",
          "group": "inline"
        },
        {
          "command": "function-map.unfoldSpecificRange",
          "when": "view === functionMapView && viewItem == foldedItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "tree-sitter-cli": "^0.22.6",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-typescript": "^0.21.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "web-tree-sitter": "^0.22.6"
  }
}
